@model PlaceSharer.WEB.Models.LoginModel

@{
    ViewBag.Title = "Log In";
}
<div class="main">
    <div>
        <div>
            <h3 style="margin-left:25%", font-weight: normal>Log In</h3>
            
            @using (Html.BeginForm("Login", "Account",
            new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "contact_form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true,"")
                <ul>
                   <li>
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
                   </li>
                    <li>
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
                    </li>
                    <li>
                        <button class="submit" type="submit" value="Create Account" id="create-account">Log In</button>
                    </li>
                    <li id="sn_buttons">
                        <button class="fb_button" type="submit">Facebook</button>
                        <button class="google_button" type="submit">google</button>
                    </li>
                </ul>
               
            }

           
            
        </div>
    </div>
</div>


