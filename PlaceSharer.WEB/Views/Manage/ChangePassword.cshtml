@model PlaceSharer.WEB.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
@using (Html.BeginForm("ChangePassword", "Manage",
                        new { ReturnUrl = ViewBag.ReturnUrl },
                        FormMethod.Post, new { @class = "contact_form" }))
{
    @Html.AntiForgeryToken()
    <h3>@Resources.Resource.ChangePassword</h3>
  
    @Html.ValidationSummary()
  <ul>
      <li>
        @Html.LabelFor(m => m.OldPassword)     
        @Html.PasswordFor(m => m.OldPassword)
        </li><li>

           @Html.LabelFor(m => m.NewPassword)
           @Html.PasswordFor(m => m.NewPassword)
        </li><li>

          @Html.LabelFor(m => m.ConfirmPassword)
          @Html.PasswordFor(m => m.ConfirmPassword)
      </li><li>
               <button class="submit" type="submit" value=@Resources.Resource.Change id="create-account">@Resources.Resource.SignIn</button>
      </li>
      
</ul>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}